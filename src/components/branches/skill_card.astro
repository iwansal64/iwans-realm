---
import { Image } from "astro:assets";


const  { skill_name, skill_desc, skill_link, skill_image } = Astro.props;

---

<a href={skill_link} class="skill-card">
    <div class="info">
        <h1 class="skill-name">{skill_name}</h1>
        <p class="skill-description">{skill_desc}</p>
    </div>
    <Image src={skill_image} alt="Image" />
</a>

<style>
    a.skill-card {
        display: flex;
        flex-direction: column;
        gap: 2px;
        height: 70vh;
        border-radius: 15px;
    }

    a {
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 10px;
        box-sizing: border-box;

        background-color: var(--accent-color);
    }

    a::after {
        content: unset;
    }
    
    a > * {
        text-align: center;
    }

    img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        background-position: -100% -100%;
        border-radius: 15px;
    }
</style>