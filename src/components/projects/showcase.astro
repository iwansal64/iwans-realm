---
import { projects_data } from "../../variables/projects";
import strftime from "strftime";

---


<section class="showcase">
    {projects_data.map((project_data) => {
        return <div class="showcase-item">
            <h1 class="showcase-title">{project_data.title}</h1>
            <p class="showcase-description">{project_data.description}</p>
            <div class="showcase-date">
                <p class="date-start">{strftime("%d %B %Y", project_data.dateStart)}</p>
                <p class="right-arrow">&rarr;</p>
                {project_data.dateEnd?<p class="date-end">{strftime("%d %B %Y", project_data.dateEnd)}</p>:<p class="state">{project_data.state}</p>}
            </div>
        </div>
    })}
</section>

<style>
    section {
        margin-top: 40px;
        margin-bottom: 20px;

        padding: 20px;
        box-sizing: border-box;

        display: grid;
        align-items: center;
        filter: brightness(var(--container-brightness)); 
        
        background-color: transparent;
    }

    section * {
        color: var(--text-color);
        text-align: center;
    }

    @media (min-width: 1000px) {
        section {
            grid-template-columns: 1fr 1fr;
        }
    }


    div.showcase-item {
        border-bottom: 2px solid white;
        
        width: 100%;
        height: 100%;

        display: flex;
        flex-direction: column;
        align-items: center;

        padding: 10px 50px;
        box-sizing: border-box;
    }

    div.showcase-item > p.showcase-description {
        font-weight: 200;
    }

    div.showcase-item > div.showcase-date {
        margin-top: 10px;
        width: 100%;

        display: flex;
        justify-content: center;

        gap: 5px;
    }

    
</style>