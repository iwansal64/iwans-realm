<style>
    section {
        margin-top: 100px;
        display: flex;
        flex-direction: column;
        align-items: center;
        padding: 80px 40px;
        box-sizing: border-box;
        background-color: var(--accent-color-2);
    }

    @media (min-width: 700px) {
        section {
            padding: 80px 120px;
        }
    }

    section * {
        color: var(--text-color-alt);
    }

    h1.title {
        font-size: 24px;
    }

    p.subtitle {
        margin-bottom: 20px;
        text-align: center;
        font-size: 14px;
    }

    div.stations {
        width: 100%;
        height: 100%;

        padding: 20px;
        box-sizing: border-box;

        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        grid-auto-rows: max-content;
        gap: 10px;

        place-items: center;
    }

    @media (min-width: 800px) {
        div.stations {
            grid-template-columns: 1fr 1fr;
        }
    }

    div.stations a {
        width: 100%;
        height: 100%;

        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;

        text-align: center;
        padding: 10px;
        box-sizing: border-box;

        border-radius: 25px;
        background-color: var(--accent-color);
        filter: brightness(var(--container-brightnesss));
    }

    @media (min-width: 600px) {
        div.stations a {
            padding: 20px;
        }
    }

    div.stations a::after {
        content: none;
    }

    div.stations a:hover {
        filter: brightness(50%);
    }

    div.stations a * {
        color: var(--text-color-alt);
    }

    div.stations a h1 {
        font-size: 16px;
    }

    div.stations a p {
        font-size: 12px;
        font-weight: 300;
    }

    @media (min-width: 600px) {
        div.stations a h1 {
            font-size: 20px;
        }

        div.stations a p {
            font-size: 14px;
        }
    }
</style>
